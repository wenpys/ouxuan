<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize" >

        <RelativeLayout
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/person_bg"
            android:orientation="horizontal"
            android:padding="@dimen/activity_left_padding" >                

            <deling.cellcom.com.cn.widget.CircleImageView
                android:id="@+id/main_found_lv_item_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"/>
            
             <TextView
                android:id="@+id/phone"
                style="@style/app_textStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/main_found_lv_item_img"
                android:textColor="@color/white"
                android:text="***" />
        </RelativeLayout>
        	
	<LinearLayout       
      android:id="@+id/main_worn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_top_margin"
            android:background="@drawable/app_lineitemselector"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_left_padding"
            android:paddingRight="@dimen/activity_right_padding" >	
     	
    
	<LinearLayout       
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="12dp"
         android:layout_marginBottom="12dp"
         android:orientation="vertical">
             
          <ImageView
             	android:id="@+id/mykey"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:src="@drawable/mykey"
              android:scaleType="centerInside" />
          
            <TextView
                 style="@style/app_medium_textStyle2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="6dp"
                 android:text="我的钥匙" />
	</LinearLayout>
         
	<LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="12dp"
         android:layout_marginBottom="12dp"
         android:orientation="vertical"
         android:visibility="gone">
             
          <ImageView
             	android:id="@+id/openlog"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:src="@drawable/record"
              android:scaleType="centerInside" />
          
            <TextView
                 style="@style/app_medium_textStyle2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="6dp"
                 android:text="开门记录" />
         </LinearLayout>
         
	<LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="12dp"
         android:layout_marginBottom="12dp"
         android:orientation="vertical">
             
          <ImageView
			  android:id="@+id/applykey"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:src="@drawable/autho"
              android:scaleType="centerInside" />
          
         <TextView
              style="@style/app_medium_textStyle2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:text="申请钥匙" />
	</LinearLayout>
         
	<LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="12dp"
         android:layout_marginBottom="12dp"
         android:orientation="vertical">
             
          <ImageView
             	android:id="@+id/accredit"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:src="@drawable/visitor"
              android:scaleType="centerInside" />
          
            <TextView
                 style="@style/app_medium_textStyle2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="6dp"
                 android:text="钥匙授权" />
         </LinearLayout>
     	
     </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="@null" >
		
		<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
		    >
            <LinearLayout
                android:id="@+id/visitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding" 
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/apkey" />

                <TextView
                    style="@style/app_textStyle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_10"
                    android:layout_weight="1"
                    android:text="访客邀请" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/app_list_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding" 
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/coupon" />

                <TextView
                    style="@style/app_textStyle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_10"
                    android:layout_weight="1"
                    android:text="优惠券" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/app_list_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/faq" />

                <TextView
                    style="@style/app_textStyle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_10"
                    android:layout_weight="1"
                    android:text="常见问题" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/app_list_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/feedback" />

                <TextView
                    style="@style/app_textStyle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_10"
                    android:layout_weight="1"
                    android:text="问题反馈" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/app_list_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/share" />

                <TextView
                    style="@style/app_textStyle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_10"
                    android:layout_weight="1"
                    android:text="应用分享" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/app_list_right_arrow" />
            </LinearLayout>
			<LinearLayout
                android:id="@+id/personal_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/about" />

                <TextView
                    style="@style/app_textStyle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_10"
                    android:layout_weight="1"
                    android:text="关于我们" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/app_list_right_arrow" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/personal_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/setting" />

                <TextView
                    style="@style/app_textStyle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_10"
                    android:layout_weight="1"
                    android:text="设置" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/app_list_right_arrow" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:minHeight="@dimen/ll_minheight"
                android:paddingLeft="@dimen/activity_left_padding"
                android:paddingRight="@dimen/activity_right_padding" />
            <LinearLayout
                android:id="@+id/personal_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@drawable/app_lineitemselector"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:text="退出登录" />
                
            </LinearLayout>
          </LinearLayout>
    	</ScrollView>
	</LinearLayout>
</LinearLayout>
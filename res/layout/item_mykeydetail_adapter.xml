<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_opendoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
        android:background="@drawable/icon_item_opendoor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_opendoor"
       	android:paddingLeft="20dp"
        android:orientation="vertical" >

	      <TextView
	          android:id="@+id/tv_havepwd"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:drawableLeft="@drawable/icon_item_area"
	          android:drawablePadding="5dp"
	          android:text="门禁名称：C2-2栋"
	          android:textColor="@color/gray"
	          android:layout_gravity="center_vertical"
	          android:textSize="16sp" />
	
	      <TextView
	          android:id="@+id/tv_time"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="5dp"
	          android:drawableLeft="@drawable/icon_item_time"
	          android:drawablePadding="5dp"
	          android:textColor="@color/gray"
	          android:text="使用期限：2026-10-15"
	          android:layout_gravity="center_vertical"
	          android:textSize="16sp" />
	
	      <TextView
	          android:id="@+id/tv_nopwd"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:drawableLeft="@drawable/icon_item_nopwd"
	          android:drawablePadding="5dp"
	          android:text="开门免密"
	          android:textSize="12sp"
	          android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
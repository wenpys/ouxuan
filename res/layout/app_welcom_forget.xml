<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainll"
    style="@style/app_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical" >

    <deling.cellcom.com.cn.widget.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_head_height"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_top_margin"
        android:background="@drawable/app_item_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <LinearLayout
            android:id="@+id/ll_wjmm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_bottom_padding"
                android:paddingTop="@dimen/activity_top_padding" >

                <TextView
                    android:id="@+id/sjhm"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="手机号码"
                    android:textSize="15sp"
                    android:textColor="@color/darkgrey" />

                <EditText
                    android:id="@+id/countet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                	android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/et_border"
                    android:hint="@string/welcome_sjhm"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
	                android:textColorHint="#c5c5c5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_bottom_padding"
                android:paddingTop="@dimen/activity_top_padding" >

                <TextView
                    android:id="@+id/yzm"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="验证码"
                    android:textSize="15sp"
                    android:textColor="@color/darkgrey" />

                <EditText
                    android:id="@+id/yzmet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
	                android:textColorHint="#c5c5c5" />

                <Button
                    android:id="@+id/yzmbtn"
                    style="@style/app_medium_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/app_btnyzmselector"
                    android:gravity="center"
                    android:paddingLeft="@dimen/text_left_padding"
                    android:paddingRight="@dimen/text_right_padding"
                    android:text="@string/welcome_hyyzm"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_czmm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_bottom_padding"
                android:paddingTop="@dimen/activity_top_padding" >

                <TextView
                    android:id="@+id/xmm"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="新密码"
                    android:textSize="15sp"
                    android:textColor="@color/darkgrey" />

                <EditText
                    android:id="@+id/xmmet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                	android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/et_border"
                    android:hint="请输入6-15位数字加字母组合密码"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/yhk_minheight"
                    android:padding="5dp"
	                android:textSize="14sp"
	                android:textColorHint="#c5c5c5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/ll_minheight"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_bottom_padding"
                android:paddingTop="@dimen/activity_top_padding" >

                <TextView
                    android:id="@+id/qrxmm"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="确认新密码"
                    android:textSize="15sp"
                    android:textColor="@color/darkgrey" />

                <EditText
                    android:id="@+id/qrxmmet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                	android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/et_border"
                    android:hint=""
                    android:inputType="textPassword"
                    android:minHeight="@dimen/yhk_minheight"
                    android:padding="5dp"
                    android:textSize="14sp"
	                android:textColorHint="#c5c5c5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

       
        <TextView
            style="@style/app_medium_textStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="小提示：为了帐号安全，不要将密码设置过于简单哦！如：123456、111111"
            android:textColor="@color/gray" />
    </LinearLayout>

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/app_btnselector"
        android:gravity="center"
        android:minHeight="@dimen/btn_minheight"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
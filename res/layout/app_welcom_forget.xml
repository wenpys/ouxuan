<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainll"
    style="@style/app_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical">
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/login_bg_img"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_head_height">
        
        <TextView 
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="修改密码"
            />

        <ImageView
            android:id="@+id/leftimg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/main_nav_back_black" />        
        
    </RelativeLayout>
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" 
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical" >
        
	    <ImageView
	        android:id="@+id/logo"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:scaleType="centerInside"
	        android:src="@drawable/login_logo" />
	    
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:orientation="vertical"
        android:layout_marginLeft="50dp" 
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp" >

		<RelativeLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginBottom="@dimen/activity_bottom_padding"
	         android:layout_marginTop="30dp"
	         android:minHeight="@dimen/ll_minheight" >		    

	        <EditText
	            android:id="@+id/countet"
	            style="@style/app_medium_textStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="5dp"
	            android:background="@drawable/shape_corner"
	            android:drawableLeft="@drawable/welcome_dl_icon"
	            android:hint="请输入账号"
	            android:inputType="numberSigned"
	            android:maxLength="11"
	            android:paddingBottom="@dimen/activity_bottom_padding"
	            android:paddingLeft="10dp"
	            android:drawablePadding="15dp"
	            android:paddingRight="10dp"
	            android:paddingTop="@dimen/activity_top_padding"
	            android:text="15920591751"
	            android:textColor="@color/black"
	            android:textColorHint="@color/gray_light"
	            android:textSize="16sp" />

		</RelativeLayout>
        <EditText
            android:id="@+id/mmet"
            style="@style/app_medium_textStyle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_corner"
            android:drawableLeft="@drawable/welcome_dlyzm_icon"
            android:drawablePadding="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:hint="@string/welcome_srmm"
            android:inputType="textPassword"
            android:minHeight="@dimen/ll_minheight"
            android:paddingBottom="@dimen/activity_bottom_padding"
            android:paddingTop="@dimen/activity_top_padding"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/black"
            android:textSize="16sp"  />
        
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/activity_bottom_padding"
	            android:layout_marginTop="15dp"
	            android:minHeight="@dimen/ll_minheight" >
	            
	        <EditText
	            android:id="@+id/yzmet"
	            style="@style/app_medium_textStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:background="@drawable/shape_corner"
	            android:drawableLeft="@drawable/welcome_dlyzm_icon"
	            android:drawablePadding="15dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:layout_marginLeft="5dp"
	            android:hint="请输入验证码"
	            android:inputType="numberSigned"
	            android:textSize="16sp"
	            android:textColorHint="@color/gray_light"
	            android:text=""
	            android:textColor="@color/black"  />
	        
	        <Button
	            android:id="@+id/yzmbtn"
	            style="@style/app_medium_textStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="50dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="5dp"
	            android:background="@drawable/btn_yanzheng"
	            android:gravity="center"
	            android:paddingLeft="@dimen/text_left_padding"
	            android:paddingRight="@dimen/text_right_padding"
	            android:text="@string/welcome_hyyzm"
	            android:textColor="@color/white"
	            android:textSize="16sp" />
    	</RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
	    android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_left_padding"
        android:paddingRight="@dimen/activity_right_padding"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" >    

	    <CheckBox
	        android:id="@+id/rememb"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
        	android:textColor="@color/white"
        	android:checked="true"
	        android:text="记住密码" />
	        
    </RelativeLayout>
    
    <Button
        android:id="@+id/ok"
        style="@style/app_big_textStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/app_btnselector"
        android:gravity="center"
        android:minHeight="@dimen/btn_minheight"
        android:text="确定"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/changebtn"
        style="@style/app_big_textStyle"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_reg"
        android:gravity="center"
        android:text="@string/welcome_zcxyh"
        android:textColor="#fff"
        android:visibility="gone" />
        
    </LinearLayout>
</RelativeLayout>